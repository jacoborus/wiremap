{
  "compilerOptions": {
    "module": "esnext",
    "rootDir": "./",
    "outDir": "./dist/",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2021",
    "lib": [
      "es2021",
      "dom",
      "deno.ns"
    ],
    "moduleResolution": "bundler",
    "removeComments": false
  },
  "include": [
    "src/wiremap.ts",
    "src/block.ts",
    "src/unit.ts",
    "src/mock.ts",
    "src/common.ts",
    "demo"
  ]
}
