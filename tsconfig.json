{
  "compilerOptions": {
    "module": "esnext",
    "rootDir": "./",
    "outDir": "./npm/",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2021",
    "lib": [
      "es2021",
      "dom"
    ],
    "moduleResolution": "bundler",
    "removeComments": false
  },
  "include": [
    "src"
  ]
}
