{
  "compilerOptions": {
    "module": "esnext",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2019",
    "lib": [
      "es2019",
      "dom"
    ],
    "moduleResolution": "bundler",
    "removeComments": false
  },
  "include": [
    "src/wiremap.ts",
    "src/block.ts",
    "src/unit.ts",
    "src/mock.ts",
    "src/common.ts"
  ]
}
